{
  /*********************** GENERAL SETTINGS *********************/
  "telemetry.telemetryLevel": "off",
  "extensions.ignoreRecommendations": true,
  "extensions.autoUpdate": false,
  "editor.suggestSelection": "first",
  "editor.snippetSuggestions": "top",
  "diffEditor.ignoreTrimWhitespace": false,
  "git.ignoreLegacyWarning": true,

  /*********************** FILE SETTINGS *********************/
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/vendor": true,
    "**/build": true,
    "**/__pycache__": true
  },
  "search.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/vendor": true,
    "**/build": true,
    "**/__pycache__": true 
  },

  /*********************** APPEARANCE SETTINGS *********************/
  "workbench.colorTheme": "One Dark Pro",
  "workbench.statusBar.visible": true,
  "workbench.activityBar.visible": true,
  "workbench.sideBar.location": "left",
  "window.menuBarVisibility": "compact",
  "breadcrumbs.enabled": false,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "all",
  "editor.renderControlCharacters": true,
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.rulers": [80, 120],

  /*********************** TERMINAL SETTINGS *********************/
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.fontFamily": "Fira Mono for Powerline",

  /*********************** EXTENSION SETTINGS *********************/
  "vim.vimrc.enable": true,
  "vim.useSystemClipboard": true,
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook",
    "*.m": "matlab"
  },
  // MARKDOWN
 "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // JS
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // PYTHON
  "python.formatting.autopep8Args": ["--max-line-length", "120"],
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  // JAVA
  "java.home": "C:\\Program Files\\Java\\jdk-12.0.2",
  "java.configuration.checkProjectSettingsExclusions": false,
  "java.semanticHighlighting.enabled": true,
  // PHP
  "intelephense.format.braces": "k&r",
  "intelephense.diagnostics.undefinedClassConstants": false,
  "intelephense.diagnostics.undefinedConstants": false,
  "intelephense.diagnostics.undefinedFunctions": false,
  "intelephense.diagnostics.undefinedMethods": false,
  "intelephense.diagnostics.undefinedTypes": false,
  "intelephense.diagnostics.undefinedSymbols": false,
  "intelephense.diagnostics.undefinedProperties": false,
  // MATLAB
  "matlab.mlintpath": "C:\\Program Files\\MATLAB\\R2020a\\bin\\win64\\mlint.exe"
}
